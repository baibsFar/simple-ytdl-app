  	<!-- <script defer src="https://code.iconify.design/iconify-icon/1.0.2/iconify-icon.min.js"></script> -->
  	<title>Youtube Downloader</title>
	</head>
	<body>
		<div class="container">
			<h1 class="my-5">Download your video on youtube</h1>
			<div class="my-5">
				<form action="/download" method="get">
					<div class="form-group">
						<label for="url" class="font-weight-bold">Video Link from YouTube</label>
						<input class="form-control" type="text" name="url" id="url" placeholder="Eg: https://www.youtube.com/watch?v=_NGQfFCFUn4">
					</div>
					<button class="btn btn-primary" type>Download</button>
				</form>
			</div>
		</div>
	</body>
</html>